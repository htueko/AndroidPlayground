<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_change_bound_rootLayout"
    tools:context=".ChangeBoundActivity">

    <ImageView
        android:id="@+id/img_change_bound_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/chi_cat"
        app:layout_constraintBottom_toTopOf="@+id/txt_change_bound_desc"
        app:layout_constraintEnd_toEndOf="@+id/txt_change_bound_desc"
        app:layout_constraintStart_toStartOf="@+id/txt_change_bound_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_change_bound_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/cat_ipsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_change_bound_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>